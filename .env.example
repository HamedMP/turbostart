# ============================================================================
# Turbo Repo Template - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# App Name (used for Docker container names, network, volumes)
APP_NAME=myapp

# PostgreSQL Database
POSTGRES_USER=myapp
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=myapp

# Internal API Key (shared between backend and bot)
API_KEY=your-api-key-here

# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Optional: Anthropic Claude AI
ANTHROPIC_API_KEY=

# Optional: ElevenLabs Text-to-Speech
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Optional: fal.ai Image Generation
FAL_AI_KEY=

# Optional: Cloudflare R2 Storage
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=myapp-media
R2_PUBLIC_URL=

# Optional: PostHog Analytics
POSTHOG_API_KEY=
POSTHOG_HOST=https://eu.i.posthog.com

# Optional: Frontend PostHog (public project API key - safe for frontend)
VITE_PUBLIC_POSTHOG_KEY=phc_xxx
VITE_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Optional: Cloudflare Tunnel (for custom domains)
CLOUDFLARE_TUNNEL_TOKEN=

# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Log level (debug, info, warn, error)
LOG_LEVEL=debug
