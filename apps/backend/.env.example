# Backend Environment Variables

# Server Configuration
PORT=4000
NODE_ENV=development

# API Security
API_KEY=your_api_key_here

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp

# Logging
LOG_LEVEL=debug

# ============================================================================
# AI & Media Services (optional - enable as needed)
# ============================================================================

# Anthropic Claude API (for AI text generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs (for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# fal.ai (for AI image generation)
FAL_AI_KEY=your_fal_ai_key_here

# ============================================================================
# Storage & Analytics (optional)
# ============================================================================

# Cloudflare R2 Storage (for caching generated media)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# PostHog Analytics
POSTHOG_API_KEY=phc_your_project_api_key
POSTHOG_HOST=https://eu.i.posthog.com

# Telegram (for channel auto-posting)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHANNEL_ID=@your_channel
